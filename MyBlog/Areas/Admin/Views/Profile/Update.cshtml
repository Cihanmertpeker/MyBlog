@using MyBlogMVC.Models
@model MyBlogMVC.Models.ProfileUpdateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";

}



<div class="container mt-3">
    <form asp-action="Update" asp-controller="Profile" asp-area="Admin" enctype="multipart/form-data" method="post">

        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="Title">Başlık :</label>
            <input type="text" asp-for="Title" class="form-control"  />
        </div>

        <div class="mb-3">
            <label for="Title"> Açıklama :</label>
            <textarea asp-for="Summary" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="Title">İletişim :</label>
            <input type="text" asp-for="Contact"  class="form-control" />
        </div>



        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div asp-validation-summary="All" class="text-danger lead">
        </div>
    </form>
</div>